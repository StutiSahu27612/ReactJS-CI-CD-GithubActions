{
  "name": "testing-with-webpack-and-chai-mocha",
  "version": "1.0.0",
  "description": "Great thanks to Stephen Grider's Redux Simple Starter Repo, and his Udemy Course 'Advanced React and Redux', which were the basis of this code",
  "main": "index.js",
  "repository": "git@github.com:herrkraatz/react-testing.git",
  "scripts": {
    "start": "npm run dev",
    "dev": "node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --config webpack.config.dev.js",
    "prod": "webpack --config webpack.config.prod.js && cp index.html dist && cp manifest.json dist && cp logo.svg dist && cp favicon.ico dist && cp -R style dist",
    "test": "mocha --require @babel/register --require ./test/test_helper.js --recursive ./test",
    "test:watch": "npm run test -- --watch",
    "coverage": "nyc npm run test"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "extension": [
      ".js",
      ".jsx"
    ],
    "exclude": [
      "**/*.test.js",
      "**/*.spec.js"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.x.x",
    "@babel/register": "^7.x.x",
    "babel-loader": "^8.x.x",
    "@babel/preset-env": "^7.x.x",
    "@babel/preset-react": "^7.x.x",
    "@babel/plugin-proposal-class-properties": "^7.x.x",
    "@babel/plugin-proposal-object-rest-spread": "^7.x.x",
    "chai": "^4.1.2",
    "chai-jquery": "^2.0.0",
    "jquery": "^3.3.1",
    "jsdom": "^11.11.0",
    "mocha": "^5.2.0",
    "nyc": "^17.1.0",
    "react-addons-test-utils": "^15.6.2",
    "webpack": "^4.10.1",
    "webpack-cli": "^2.1.4",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "lodash": "^4.17.12",
    "react": "^16.x.x",
    "react-dom": "^16.x.x",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "redux": "^4.0.0"
  }
}
